{
  "name": "phemmelliot-my-diary",
  "version": "1.0.0",
  "description": "Andela My Diary Api",
  "main": "server.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register \"./test/*.spec.js\" --timeout 150000 --exit ",
    "dev": "nodemon starter.js",
    "lint": "eslint",
    "heroku-postbuild": "npm install --production",
    "coverage": "babel-node ./node_modules/.bin/babel-istanbul  cover _mocha -- -R spec \"./test/*.spec.js\" --timeout 150000 --compilers js:babel-core/register",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "start": " nodemon --watch .  --exec babel-node  -- server.js --presetenv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phemmelliot/Andela-Developer-Challenge.git"
  },
  "keywords": [
    "Diary",
    "Andela",
    "Bootcamp",
    "Project"
  ],
  "author": "Femi Elliot Adegoke",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phemmelliot/Andela-Developer-Challenge/issues"
  },
  "homepage": "https://github.com/phemmelliot/Andela-Developer-Challenge#readme",
  "dependencies": {
    "babel-core": "^6.26.3",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "pg": "^7.4.3",
    "request": "^2.87.0",
    "swagger-ui-express": "^3.0.10",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-istanbul": "^0.12.2",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "istanbul": "^0.4.5",
    "jasmine": "^3.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "sinon": "^6.1.4"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "engines": {
    "node": "8.11.3"
  }
}
